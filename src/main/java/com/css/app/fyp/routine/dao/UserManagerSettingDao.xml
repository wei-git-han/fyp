<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.fyp.routine.dao.UserManagerSettingDao">

	<select id="queryObject" resultType="com.css.app.fyp.routine.entity.UserManagerSetting">
		select * from USER_MANAGER_SETTING where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.fyp.routine.entity.UserManagerSetting">
		select * from USER_MANAGER_SETTING where 1=1
		<if test="userId!=null and userId!=''">
			AND USER_ID=#{userId}
		</if>
		<if test="userType!=null">
			AND USER_TYPE=#{userType}
		</if>
		<if test="userTypeList!=null">
			AND USER_TYPE IN 
			<foreach item="userType" collection="userTypeList" open="(" separator="," close=")">
				#{userType}
			</foreach>
		</if>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
	<select id="querySingleObject" resultType="com.css.app.fyp.routine.entity.UserManagerSetting">
		select * from USER_MANAGER_SETTING where 1=1 and user_type &lt;10
		<if test="userId!=null and userId!=''">
			AND USER_ID=#{userId}
		</if>
		<if test="userType!=null">
			AND USER_TYPE=#{userType}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from USER_MANAGER_SETTING 
	</select>
	 
	<insert id="save" parameterType="com.css.app.fyp.routine.entity.UserManagerSetting">
		insert into USER_MANAGER_SETTING
		(
			"ID", 
			"USER_ID", 
			"USER_NAME", 
			"ORG_ID", 
			"ORG_NAME", 
			"USER_TYPE"
		)
		values
		(
			#{id}, 
			#{userId}, 
			#{userName}, 
			#{orgId}, 
			#{orgName}, 
			#{userType}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.fyp.routine.entity.UserManagerSetting">
		update USER_MANAGER_SETTING 
		<set>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="userName != null">"USER_NAME" = #{userName}, </if>
			<if test="orgId != null">"ORG_ID" = #{orgId}, </if>
			<if test="orgName != null">"ORG_NAME" = #{orgName}, </if>
			<if test="userType != null">"USER_TYPE" = #{userType}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from USER_MANAGER_SETTING where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from USER_MANAGER_SETTING where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>