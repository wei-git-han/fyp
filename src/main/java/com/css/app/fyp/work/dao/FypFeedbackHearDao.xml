<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.fyp.work.dao.FypFeedbackHearDao">

	<select id="queryObject" resultType="com.css.app.fyp.work.entity.FypFeedbackHear">
		select * from FYP_FEEDBACK_HEAR where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.fyp.work.entity.FypFeedbackHear">
		select * from FYP_FEEDBACK_HEAR
		where
		 1=1
			<!--单位-->
			<if test="submitDeptId!=null and submitDeptId!=''">
				and SUBMIT_DEPT_ID =#{submitDeptId}
			</if>
			<!--提出人-->
			<if test="submitUserId!=null and submitUserId!=''">
				and SUBMIT_USER_ID =#{submitUserId}
			</if>

			<if test="submitDeptName != null and submitDeptName !=''">
				and SUBMIT_DEPT_NAME = #{submitDeptName}
			</if>

			<if test="submitUserName != null and submitUserName !=''">
				and SUBMIT_USER_NAME = #{submitUserName}
			</if>
			<!--状态-->
			<if test="status!=null">
				and STATUS =#{status}
			</if>
			<!--提出时间-->
			<if test="submitTimeBegin!=null and submitTimeEnd!=null">
				and SUBMIT_TIME &lt;= #{submitTimeEnd}
				and SUBMIT_TIME &gt;= #{submitTimeBegin}
			</if>
			<!--问题描述-->
			<if test="desc!=null and desc!=''">
				and "DESC" like '%'||#{desc}||'%'
			</if>
			<if test="offset != null and limit != null">
				limit #{offset}, #{limit}
			</if>
		order by SUBMIT_TIME desc
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from FYP_FEEDBACK_HEAR 
	</select>
	 
	<insert id="save" parameterType="com.css.app.fyp.work.entity.FypFeedbackHear">
		insert into FYP_FEEDBACK_HEAR
		(
			"ID", 
			"SUBMIT_USER_ID", 
			"SOFT_NAME",
			"SUBMIT_DEPT_ID", 
			"SUBMIT_TIME", 
			"TYPE", 
			"SOLVE_TIME", 
			"DESC", 
			"STATUS", 
			"SUBMIT_DEPT_NAME", 
			"SUBMIT_USER_NAME", 
			"MARCH",
			"SOFT_ID",
			"TYPE_ID"

		)
		values
		(
			#{id}, 
			#{submitUserId}, 
			#{softName},
			#{submitDeptId}, 
			#{submitTime}, 
			#{type}, 
			#{solveTime}, 
			#{desc}, 
			#{status}, 
			#{submitDeptName}, 
			#{submitUserName}, 
			#{march},
			#{softId},
			#{typeId}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.fyp.work.entity.FypFeedbackHear">
		update FYP_FEEDBACK_HEAR 
		<set>
			<if test="submitUserId != null">"SUBMIT_USER_ID" = #{submitUserId}, </if>
			<if test="softName != null">"SOFT_NAME" = #{softName}, </if>
			<if test="submitDeptId != null">"SUBMIT_DEPT_ID" = #{submitDeptId}, </if>
			<if test="submitTime != null">"SUBMIT_TIME" = #{submitTime}, </if>
			<if test="type != null">"TYPE" = #{type}, </if>
			<if test="solveTime != null">"SOLVE_TIME" = #{solveTime}, </if>
			<if test="desc != null">"DESC" = #{desc}, </if>
			<if test="status != null">"STATUS" = #{status}, </if>
			<if test="submitDeptName != null">"SUBMIT_DEPT_NAME" = #{submitDeptName}, </if>
			<if test="submitUserName != null">"SUBMIT_USER_NAME" = #{submitUserName}, </if>
			<if test="march != null">"MARCH" = #{march},</if>
			<if test="softId != null">"SOFT_ID" = #{softId},</if>
			<if test="typeId != null">"TYPE_ID" = #{typeId}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from FYP_FEEDBACK_HEAR where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from FYP_FEEDBACK_HEAR where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>